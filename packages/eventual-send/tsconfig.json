{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "checkJs": true,
    "noEmit": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "allowJs": true,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": false,
    "moduleResolution": "node"
  },
  "include": ["*.js", "*.ts", "src/**/*.js", "src/**/*.ts"]
}
