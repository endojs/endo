{
  "name": "@endo/eventual-send",
  "version": "1.3.4",
  "description": "Extend a Promise class to implement the eventual-send API",
  "type": "module",
  "main": "src/no-shim.js",
  "scripts": {
    "test": "yarn test:ses && yarn test:noses",
    "test:c8": "c8 $C8_OPTIONS ava --config=ava-nesm.config.js",
    "test:xs": "exit 0",
    "build": "exit 0",
    "clean": "git clean -fX \"*.d.ts*\" \"*.d.cts*\" \"*.d.mts*\" \"*.tsbuildinfo\"",
    "prepack": "tsc --build tsconfig.build.json",
    "postpack": "yarn clean",
    "lint-fix": "yarn lint:eslint --fix && yarn lint:types",
    "lint": "yarn lint:types && yarn lint:eslint",
    "lint:types": "tsc",
    "lint:eslint": "eslint '**/*.js'",
    "test:ses": "ava --config test/_ava-ses.config.js",
    "test:noses": "ava --config test/_ava-noses.config.js"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": "./src/no-shim.js",
    "./shim.js": "./shim.js",
    "./utils.js": "./utils.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/endojs/endo.git",
    "directory": "packages/eventual-send"
  },
  "author": "Endo contributors",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/endojs/endo/issues"
  },
  "homepage": "https://github.com/endojs/endo#readme",
  "dependencies": {
    "@endo/env-options": "workspace:^",
    "@endo/harden": "workspace:^"
  },
  "devDependencies": {
    "@endo/lockdown": "workspace:^",
    "ava": "catalog:dev",
    "c8": "catalog:dev",
    "eslint": "catalog:dev",
    "tsd": "catalog:dev",
    "typescript": "~5.9.2"
  },
  "keywords": [
    "eventual send",
    "wavy dot"
  ],
  "files": [
    "./*.d.ts",
    "./*.js",
    "./*.map",
    "LICENSE*",
    "SECURITY*",
    "dist",
    "lib",
    "src",
    "tools"
  ],
  "eslintConfig": {
    "extends": [
      "plugin:@endo/internal"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": [
      "test/**/*.test.*"
    ],
    "timeout": "2m"
  },
  "typeCoverage": {
    "atLeast": 77.81
  }
}
