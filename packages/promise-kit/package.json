{
  "name": "@endo/promise-kit",
  "version": "1.0.4",
  "description": "Helper for making promises",
  "keywords": [
    "promise"
  ],
  "author": "Endo contributors",
  "license": "Apache-2.0",
  "homepage": "https://github.com/endojs/endo#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/endojs/endo.git",
    "directory": "packages/promise-kit"
  },
  "bugs": {
    "url": "https://github.com/endojs/endo/issues"
  },
  "type": "module",
  "main": "./index.js",
  "module": "./index.js",
  "exports": {
    ".": "./index.js",
    "./shim.js": "./shim.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "exit 0",
    "build:types": "tsc --build tsconfig.build.json",
    "clean:types": "git clean -f '*.d.ts*'",
    "cover": "c8 ava",
    "lint": "yarn lint:types && yarn lint:eslint",
    "lint-check": "yarn lint",
    "lint-fix": "eslint --fix .",
    "lint:eslint": "eslint .",
    "lint:types": "tsc",
    "test": "ava",
    "test:xs": "exit 0"
  },
  "dependencies": {
    "ses": "^1.3.0"
  },
  "devDependencies": {
    "@endo/ses-ava": "^1.1.2",
    "@types/node": "^16.6.0",
    "ava": "^5.3.0",
    "babel-eslint": "^10.0.3",
    "c8": "^7.14.0",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.0.0",
    "typescript": "~5.4.2"
  },
  "files": [
    "LICENSE*",
    "SECURITY*",
    "src",
    "*.js",
    "*.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@endo/internal"
    ]
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "timeout": "2m"
  },
  "engines": {
    "node": ">=11.0"
  },
  "typeCoverage": {
    "atLeast": 90.9
  }
}
