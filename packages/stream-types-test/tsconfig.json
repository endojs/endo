{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noEmit": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node"
  },
  "include": ["*.js", "*.ts", "src/**/*.js", "src/**/*.ts"]
}
